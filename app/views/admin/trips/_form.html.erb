<div class="container has-text-centered">
  <div class="column is-4 is-offset-4">
    <div class="box">
      <%= form_for [:admin, @trip] do |f| %>
        <div class="field">
          <div class="control">
            <%= f.label :duration %>
            <%= f.number_field :duration, class: "input is-small,", placeholder: "Trip Duration" %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.label :start_date %>
            <%= f.date_field :start_date, class: "input is-small", placeholder: "Start Date" %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.label :end_date %>
            <%= f.date_field :end_date, class: "input is-small", placeholder: "End Date" %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.label :bike_id %>
            <%= f.number_field :bike_id, class: "input is-small", placeholder: "Bike ID" %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.label :subscription_type %>
            <%= f.text_field :subscription_type, class: "input is-small", placeholder: "Subscription Type" %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.label :zip_code %>
            <%= f.number_field :zip_code, class: "input is-small", placeholder: "Zip Code" %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.label :start_station_id %>
            <%= f.collection_select(:start_station_id, @stations, :id, :name, {class: "select"}) %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.label :end_station_id %>
            <%= f.collection_select(:start_station_id, @stations, :id, :name, {class: "select"}) %>
          </div>
        </div>
        <%= f.submit class: "button is-block is-info is-small is-fullwidth" %>
      <% end %>
    </div>
  </div>
</div>

<script async type="text/javascript" src="../js/bulma.js"></script>