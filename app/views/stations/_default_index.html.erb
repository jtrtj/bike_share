<div class="container">
  <section class="hero is-small is-primary is-bold">
    <div class="hero-body">
      <div class="container">
        <h1 class="title is-size-1 has-text-centered has-text-weight-bold">Stations</h1>
      </div>
    </div>
  </section>
  <br>
  <br>
  <div>
    <%= will_paginate %>
    <br>
    <table class="table is-bordered is-striped">
      <thead>
        <th>Name</th>
        <th>Dock Count</th>
        <th>City</th>
        <th>Installation Date</th>
      </thead>

      <tbody>
        <% @stations.each do |station| %>
            <tr>
              <td><%= link_to "#{station.name}", "/#{station.slug}" %></td>
              <td><%= station.dock_count %></td>
              <td><%= station.city %></td>
              <td><%= station.installation_date %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

