<div class="container">
  <section class="hero is-small is-primary is-bold">
    <div class="hero-body has-text-centered">
      <div class="container">
        <h1 class="title is-size-1 has-text-weight-bold">Trips</h1>
        <% if current_admin? %>
          <%= button_to "Create Trip", new_admin_trip_path, class: "button is-large is-inverted is-bordered is-success", method: :get, class: 'button is-info' %>
            <% end %>
      </div>
    </div>
  </section>
  <br>
  <br>
  <div>
    <div class="box">
      <%= will_paginate %>
    </div>
    <br>
    <table class="table is-bordered is-striped">
      <thead>
        <th>Trip #</th>
        <th>Duration</th>
        <th>Start Date</th>
        <th>Start Station</th>
        <th>End Date</th>
        <th>End Station</th>
        <th>Bike</th>
        <th>Subscription Type</th>
        <th>Zip Code</th>
      </thead>

      <% @trips.each do |trip| %>
        <tbody>
          <tr>
            <td>
              <%=link_to trip.id, trip_path(trip)%>
            </td>
            <td>
              <%=trip.duration%>
            </td>
            <td>
              <%=trip.start_date%>
            </td>
            <td>
              <%=trip.start_station_id%>
            </td>
            <td>
              <%=trip.end_date%>
            </td>
            <td>
              <%=trip.end_station_id%>
            </td>
            <td>
              <%=trip.bike_id%>
            </td>
            <td>
              <%=trip.subscription_type%>
            </td>
            <td>
              <%=trip.zip_code%>
            </td>
            <% if current_admin? %>
              <td>
                <%= button_to "Edit", edit_admin_trip_path(trip), method: :get, class: "button is-info" %>
              </td>
              <td>
                <%= button_to "Delete", admin_trip_path(trip), method: :delete, class: "button is-danger" %>
              </td>
              <% end %>
          </tr>
        </tbody>
        <% end %>
    </table>
  </div>
</div>
</div>